<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    
    <servlet>
        <servlet-name>LogInServlet</servlet-name>
        <servlet-class>com.example.javabasics.servlets.LogInServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LogInServlet</servlet-name>
        <url-pattern>/LogInServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AssignCourseServlet</servlet-name>
        <servlet-class>com.example.javabasics.servlets.AssignCourseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AssignCourseServlet</servlet-name>
        <url-pattern>/AssignCourseServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddGradeServlet</servlet-name>
        <servlet-class>com.example.javabasics.servlets.AddGradeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddGradeServlet</servlet-name>
        <url-pattern>/AddGradeServlet</url-pattern>
    </servlet-mapping>


</web-app>